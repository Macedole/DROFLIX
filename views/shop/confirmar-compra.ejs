<%-include('../includes/head.ejs')%>
<%-include('../includes/nav.ejs')%>
<main class="pt-5 cover d-flex align-items-center">
  <div class="container p-5">
    <div class="row d-flex">
      <div class="card col-4 d-flex align-items-center p-2">
        <p class="text-muted">1. Identificação</p>
        <div class="p-3">
          <p class="small">Nome: <strong><%=cliente.nome%></strong></p>
          <p class="small">E-mail: <strong><%=cliente.email%></strong></p>
          <p class="small">Endereço para entrega: <strong><%=cliente.logradouro%>, <%=cliente.numero%> - <%=cliente.cep%></strong></p>
          <a class="text-muted" href="/cliente/<%=cliente.id_Cliente%>">Alterar endereço</a>
        </div>
      </div>
      <div class="card col-4 d-flex align-items-center p-2">
        <div class="d-flex flex-column align-items-start justify-content-center">
          <p class="text-muted">2. Pagamento</p>
        <div class="form-check">
          <input type="radio" name="pagamento" id="" class="form-check-input">
          <label for="pagamento" class="form-check-label"><i class="fas fa-credit-card me-2"></i> Cartão de crédito</label>
        </div>
        <div class="form-check">
          <input type="radio" name="pagamento" id="" class="form-check-input">
          <label for="pagamento" class="form-check-label"><i class="fas fa-barcode me-2"></i> Boleto</label>
        </div>
        <div class="form-check">
          <input type="radio" name="pagamento" id="" class="form-check-input">
          <label for="pagamento" class="form-check-label"><i class="fas fa-qrcode me-2"></i> PIX</label>
        </div>
        </div>
      </div>
      <div class="card col-4 d-flex align-items-center p-2">
        <p class="text-muted">3. Resumo do pedido</p>
        <div class="info row p-2">
          <% for (const produto of produtos) { %>
            <div class="col-3">
              <img src="<%=produto.urlImagem%>" class="img-fluid img-small col-3" alt="">
            </div>
            <div class="col-9">
              <p><%=produto.nomeProduto%></p>
              <p><strong>R$<%=produto.preco%></strong></p>
            </div>
            <hr>
          <% } %>
            <div class="info">
              <p class="fs-5"><strong>Total: R$<%=total%></strong></p>
              <p class="text-muted">Frete: R$0,00</p>
            </div>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-end">
      <a href="/finalizacao" class="btn default-btn fs-6 mt-3 text-decoration-none">Confirmar</a>
    </div>
  </div>
</main>
<%-include('../includes/end.ejs')%>